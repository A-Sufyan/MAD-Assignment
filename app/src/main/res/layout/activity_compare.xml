<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graypink"
    tools:context=".CompareActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/compareRecyclerView"
        android:layout_width="413dp"
        android:layout_height="208dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="138dp" />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:ems="10"
        android:fontFamily="@font/raleway"
        android:hint="how much do you get? (g)"
        android:inputType="number"
        android:textAlignment="center"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="447dp" />

    <EditText
        android:id="@+id/priceEditText"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:ems="10"
        android:fontFamily="@font/raleway"
        android:hint="how much are you paying? ($)"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="562dp" />

    <Button
        android:id="@+id/addtoCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="add to compare"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="#7A7A7A"
        tools:layout_editor_absoluteY="603dp" />

    <TextView
        android:id="@+id/amountTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Price"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="578dp" />

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Amount"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="456dp" />

    <EditText
        android:id="@+id/brandEditText"
        android:layout_width="262dp"
        android:layout_height="41dp"
        android:ems="10"
        android:fontFamily="@font/raleway"
        android:hint="what are you getting?"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/brandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Brand"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="378dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Compare"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="54dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/graypink"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@color/buttongray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>